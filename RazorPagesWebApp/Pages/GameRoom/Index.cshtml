@page "{sessionId}"
@model RazorPagesWebApp.Pages.GameRoom.IndexModel
@{
    ViewData["Title"] = "Game Room";
}

<h1>Welcome, @Model.PlayerName </h1>
<br/>


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game room</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<div class="bg-blur min-h-screen bg-gray-100 flex flex-col justify-center items-center">
    <div class="container mx-auto p-4">
        <div class="bg-white rounded-lg shadow">
            <div class="border-b p-3">
                <h5 class="font-bold uppercase text-gray-600">@Model.SessionId</h5>
            </div>
            <div class="p-4">
                <div id="messagesListParent" class="overflow-y-auto h-96">
                    <!-- Chat messages will be appended here -->
                    <div id="messagesList" class="space-y-4">
                        <!-- Sample message -->
                    </div>
                </div>
                <div class="pt-4 flex">
                    <input type="text" id="messageInput" class="w-full p-2 border rounded-lg" placeholder="Type your message...">
                    <button id="sendButton" class="ml-2 px-4 py-2 bg-blue-500 text-white rounded-lg">Send</button>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-3 gap-4 mt-4">
            <!-- Team display sections -->
            <div class="bg-white p-4 rounded-lg shadow">
                <h5 class="font-bold uppercase text-gray-600">Team 1</h5>
                <ul class="mt-2">
                    <li>Member 1</li>
                    <li>Member 2</li>
                    <li>Member 3</li>
                </ul>
            </div>
            <div class="bg-white p-4 rounded-lg shadow">
                <h5 class="font-bold uppercase text-gray-600">Team 2</h5>
                <ul class="mt-2">
                    <li>Member 1</li>
                    <li>Member 2</li>
                    <li>Member 3</li>
                </ul>
            </div>
            <div class="bg-white p-4 rounded-lg shadow">
                <h5 class="font-bold uppercase text-gray-600">Team 3</h5>
                <ul class="mt-2">
                    <li>Member 1</li>
                    <li>Member 2</li>
                    <li>Member 3</li>
                    <li>Member 4</li>
                    <li>Member 5</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="captain-view">
        @if (true@* player is captain *@)
        {
            @Html.Partial("_PartialViewCaptainPick.cshtml")
        }
    </div>
</div>


<script>
    var user = '@Model.PlayerName'
    var sessionId = '@Model.SessionId'
</script>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>



<style>
    /* Additional custom styles can be added here */
    .bg-blur {
        background-image: url('https://source.unsplash.com/featured/?nature');
        background-size: cover;
        background-position: center;
        backdrop-filter: blur(8px);
    }

    .captain-view {
        margin-top: 120px;
        margin-bottom: 200px;
    }
</style>