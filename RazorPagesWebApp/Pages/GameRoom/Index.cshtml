    /* Additional custom styles can be added here */
    .bg-blur {
        background-image: url('https://source.unsplash.com/featured/?nature');
        background-size: cover;
        background-position: center;
        backdrop-filter: blur(8px);
    }

    .captain-view {
        margin-top: 120px;
        margin-bottom: 200px;
    }
</style>