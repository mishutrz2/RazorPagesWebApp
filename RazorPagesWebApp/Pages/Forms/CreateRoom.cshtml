@page
@model RazorPagesWebApp.Pages.Forms.CreateRoomModel
@{
    ViewData["Title"] = "Create Room";
}

<style>
    /* Additional styles can be added here if needed */

    body {
        background-color: #f7fafc; /* bg-gray-100 */
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 1rem; /* p-4 */
    }

    .container {
        width: 100%;
        max-width: 28rem; /* max-w-lg */
    }

    .form {
        background-color: white;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06); /* shadow-md */
        border-radius: 0.375rem; /* rounded */
        padding: 1.25rem; /* px-8 pt-6 pb-8 */
        margin-bottom: 1rem; /* mb-4 */
    }

        .form textarea {
            width: 100%;
            padding: 0.5rem; /* py-2 px-3 */
            border: 1px solid #e2e8f0; /* border */
            border-radius: 0.375rem; /* rounded */
            margin-bottom: 1rem; /* mb-4 */
            resize: vertical;
            outline: none; /* focus:outline-none */
        }

    .text-danger {
        color: #e53e3e; /* text-danger */
        font-size: 0.875rem;
        margin-bottom: 1rem; /* mb-4 */
        display: block;
    }

    .btn {
        background-color: #4a90e2; /* bg-blue-500 */
        color: white;
        font-weight: bold;
        padding: 0.5rem 1rem; /* py-2 px-4 */
        border-radius: 0.375rem; /* rounded */
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
        outline: none; /* focus:outline-none */
    }

        .btn:hover {
            background-color: #1c7ed6; /* hover:bg-blue-700 */
        }

        .btn:focus {
            box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.5); /* focus:shadow-outline */
        }

    .image {
        width: 100%;
        border-radius: 0.375rem; /* rounded */
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06); /* shadow-md */
    }
</style>

<body>
    <div class="container">
        <form method="post" id="footballForm" class="form">
            <div>
                <textarea asp-for="InputList" rows="8" placeholder="Enter players list here&#10;1. Mike&#10;2. Tim&#10;3. George C&#10;4. Danny C&#10;5. Ronny&#10;6. Raul C&#10;7. Steve&#10;8. Marry&#10;9. Tom&#10;..."></textarea>
                <span asp-validation-for="InputList" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="btn">Create</button>
            </div>
        </form>
        <img src="https://source.unsplash.com/featured/?football" alt="Football Image" class="image">
    </div>
</body>
